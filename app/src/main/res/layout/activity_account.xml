<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.jarvisventures.homeline.account.AccountActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/projectBannerImage"
                android:paddingLeft="10sp"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:scaleType="fitCenter"
                android:src="@drawable/homelinebanner"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/welcomeBanner"
                android:text="Welcome, Klay"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10sp"
                android:layout_toStartOf="@+id/accountButton"
                android:textAllCaps="true"/>

            <Button
                android:id="@+id/accountButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10sp"
                android:background="@drawable/ic_account"
                android:backgroundTint="@android:color/white"/>

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBar"
        android:textSize="20sp"
        android:id="@+id/myaccountlabel"
        android:layout_marginTop="50sp"
        android:layout_centerInParent="true"
        android:text="MY ACCOUNT"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/logoutbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="30sp"
        android:layout_below="@+id/myaccountlabel"
        android:layout_centerInParent="true"/>



</RelativeLayout>
